    Type: AWS::DynamoDB::Table
    Properties:
      AttributeDefinitions:
        -
          AttributeName: "SSMId"
          AttributeType: "S"
      KeySchema:
        -
          AttributeName: "SSMId"
          KeyType: "HASH"
      BillingMode: "PAY_PER_REQUEST"
      TableName: !Sub ${Application}-${Environment}-ssm-jobs
      PointInTimeRecoverySpecification:

          Key: application
          Value: !Ref Application
        -
          Key: environment
          Value: !Ref Environment
        -
          Key: Name
          Value: !Sub ${Application}-${Environment}-default-schema
      ReservedConcurrentExecutions: 30
    Metadata:
      cfn_nag:
        rules_to_suppress:
          - id: W89
